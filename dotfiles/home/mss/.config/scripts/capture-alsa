#!/usr/bin/env bash
if [[ -z "$STEP" ]] ; then
    STEP="${1:-3dB}"
fi

volume() {
  amixer -D default get Capture
}

format() {
  
  perl_filter='if (/.*\[(\d+%)\] (\[(-?\d+.\d+dB)\] )?\[(on|off)\]/)'
  perl_filter+='{CORE::say $4 eq "off" ? "m" : "'
  # If dB was selected, print that instead
  perl_filter+=$([[ $STEP = *dB ]] && echo '$3' || echo '$1')
  perl_filter+='"; exit}'
  output=$(perl -ne "$perl_filter")
  echo "$LABEL$output"
}

case $BLOCK_BUTTON in
  3) amixer -q -D default set Capture toggle ;;
  4) amixer -q -D default set Capture ${STEP}+ unmute ;;
  5) amixer -q -D default set Capture ${STEP}- unmute ;;
esac

volume | format
