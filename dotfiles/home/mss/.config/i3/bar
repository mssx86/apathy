#global properties (gets applied to every block)
command=/usr/libexec/i3blocks/$BLOCK_NAME
separator_block_width=10
markup=none

[focused window]
command=xtitle -t 30 -s
interval=persist

[bw]
command=~/.config/scripts/bw
interval=1
color=#ababab

[cpu]
command=~/.config/scripts/cpu
interval=1
color=#e3e3e3
separator=false
separator_block_width=5
min_width=xxxxxx

[package_temp]
command=~/.config/scripts/ptemp
interval=1
color=#e3e3e3
separator=false
separator_block_width=8

[fan]
command=~/.config/scripts/fan
interval=1
color=#e3e3e3
separator=false

[memory]
command=~/.config/scripts/mem
interval=1
color=#e3e3e3

[mediaplayer]
command=~/.config/scripts/mpdstat
color=#ababab
interval=1
signal=1

[time]
command=date '+%a %d %I:%M:%S%P'
interval=1
color=#e3e3e3
min_width=
separator_block_width=3
separator=false

[weather-local]
command=~/.config/scripts/weather-local
interval=300
color=#747474

[master-alsa]
command=~/.config/scripts/master-alsa
interval=1
signal=1
separator=false

[capture-alsa]
command=~/.config/scripts/capture-alsa
interval=1
signal=1

[host]
command=cat /etc/hostname
interval=once
color=#ababab
separator_block_width=2
separator=false

[on]
command=printf 'on'
interval=once
color=#ffffff
separator_block_width=2
separator=false

[kernel]
command=uname -r
interval=once
color=#525252

[uptime]
command=~/.config/scripts/uptime
interval=60
color=#ababab
