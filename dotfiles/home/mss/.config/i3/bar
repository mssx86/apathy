#global properties (gets applied to every block)
command=/usr/libexec/i3blocks/$BLOCK_NAME
separator_block_width=10
markup=none

[focused window]
command=xtitle -t 30 -s
interval=persist

[bw]
command=~/.config/i3/scripts/bw
interval=1
color=#ababab

[cpu]
command=~/.config/i3/scripts/cpu
interval=1
color=#e3e3e3
separator=false
separator_block_width=5
min_width=xxxxxx

[package_temp]
command=~/.config/i3/scripts/ptemp
interval=1
color=#e3e3e3
separator=false
separator_block_width=8

[fan]
command=~/.config/i3/scripts/fan
interval=1
color=#e3e3e3
separator=false

[memory]
command=~/.config/i3/scripts/memory
interval=1
color=#e3e3e3

[mediaplayer]
command=~/.config/i3/scripts/mediaplayer | awk -v len=50 '{ if (length($0) > len) print substr($0, 1, len-3) "..."; else print; }'
interval=1
signal=1

[time]
command=date '+%a %I:%M:%S%P %d/%m/%Y'
interval=1
color=#e3e3e3
min_width=xxxxxxxxxxxxxxxxxxxxxxxx
separator_block_width=3
separator=false

[weather-local]
command=~/.config/i3/scripts/weather-local
interval=300
color=#747474

[master-alsa]
command=~/.config/i3/scripts/master-alsa
interval=1
signal=1
separator=false

[capture-alsa]
command=~/.config/i3/scripts/capture-alsa
interval=1
signal=1

[host]
command=cat /etc/hostname
interval=once
color=#ababab
separator_block_width=2
separator=false

[on]
command=printf 'on'
interval=once
color=#ffffff
separator_block_width=2
separator=false

[kernel]
command=uname -r
interval=once
color=#525252

[uptime]
command=~/.config/i3/scripts/uptime
interval=60
color=#ababab
