# > 1
cdt1
tar xf /mss/work/sauces/Mako-1.1.3.tar.gz
cd Mako-1.1.3/

python setup.py build
python setup.py install --root=dest --optimize=1 --skip-build
export PYTHONPATH="$PWD/dest$(python -c "import sys; print(':'.join(sys.path))")"

cd ../

# > 2
export   CFLAGS="${CFLAGS}   -DGLX_X86_READONLY_TEXT"
export CXXFLAGS="${CXXFLAGS} -DGLX_X86_READONLY_TEXT"
export  LDFLAGS="${LDFLAGS}  -DGLX_X86_READONLY_TEXT"  

# > 3
sed -i "/pre_args += '-DUSE_ELF_TLS'/d" meson.build
python3 bin/git_sha1_gen.py --output include/git_sha1.h

# > 4
mkdir build
cd    build

meson \
 --buildtype=release \
 --prefix=/usr       \
\
 -Ddri3=true         \
 -Dzstd=true         \
 -Dllvm=false        \
 -Dplatforms=x11     \
 -Dvulkan-drivers=   \
 -Dgallium-drivers=  \
 -Ddri-drivers=i965  \
..
