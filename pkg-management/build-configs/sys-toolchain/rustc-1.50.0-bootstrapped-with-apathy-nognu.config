# 1 >> extract the tarball
tar xf /mss/work/sauces/rustc-1.50.0-src.tar.gz
cd rustc-1.50.0-src/

# 2 >> bake in the apathy triples, apply llvm fixes.
pdir="/mss/repo/pkg-management/patches/rustc-1.50.0"
patch -p1 < "${pdir}"/0001-use-lib-instead-of-libexec.patch
patch -p1 < "${pdir}"/0002-fix-display-of-llvm-version-on-rustc-Vv.patch
patch -p1 < "${pdir}"/0003-use-libunwind-instead-of-libgcc_s.patch
patch -p1 < "${pdir}"/0004-add-x86_64-apathy-triples.patch

sed -i 's/crt_static_default = true/crt_static_default = false/' \
 ./compiler/rustc_target/src/spec/linux_musl_base.rs        \
 ./vendor/rustc-ap-rustc_target/src/spec/linux_musl_base.rs

# 3 >> gen the config
t61cf="-m80387 -mcx16 -mfancy-math-387 -mfxsr -mhard-float -mieee-fp -mlong-double-80"
t61cf="${t61cf} -mmmx -mred-zone -msahf -msse -msse2 -msse3 -msse4.1 -mssse3"
t61cf="${t61cf} -mtls-direct-seg-refs -march=core2 -mtune=core2"

t61rf="-Ctarget-cpu=core2"
t61rf="${t61rf} -Ctarget-feature=+x87,+cx16,+fxsr,+mmx,+sahf,+sse,+sse2,+sse3,+sse4.1,+ssse3"
t61rf="${t61rf} -Ctarget-feature=-avx,-aes,-sse4a,-sse4.2"

export        CC="clang"
export       CXX="clang++"
export        LD="$CC"
export        AR="llvm-ar"
export        AS="llvm-as"
export        NM="llvm-nm"
export     STRIP="llvm-strip"
export    RANLIB="llvm-ranlib"
export   OBJCOPY="llvm-objcopy"
export   OBJDUMP="llvm-objdump"
export   OBJSIZE="llvm-size"
export   READELF="llvm-readelf"

export    CFLAGS="-w -O2 ${t61cf}"
export  CXXFLAGS="${CFLAGS}"
export   LDFLAGS="${CFLAGS} -Wl,--as-needed,--sort-common,-z,relro,-z,now,--gc-sections,-O2,--icf=all"
export RUSTFLAGS="-Clinker=$CC ${t61rf}"

cp -rv "${pdir}"/config.toml .

# 4 >> build
export PKG_CONFIG_ALLOW_CROSS=1
time python3 ./x.py build -j 5

# 5 >> install
instdir="${PWD}"/KEK
DESTDIR="${instdir}" python3 ./x.py install

# 6 >> clean up
rm -rfv \
 "${instdir}"/etc                                                 \
 "${instdir}"/opt/rustc-1.50.0/lib/rustlib/components             \
 "${instdir}"/opt/rustc-1.50.0/lib/rustlib/etc                    \
 "${instdir}"/opt/rustc-1.50.0/lib/rustlib/install.log            \
 "${instdir}"/opt/rustc-1.50.0/lib/rustlib/manifest-*             \
 "${instdir}"/opt/rustc-1.50.0/lib/rustlib/rust-installer-version \
 "${instdir}"/opt/rustc-1.50.0/lib/rustlib/uninstall.sh           \
 "${instdir}"/opt/rustc-1.50.0/share

# 7 >> strip
strip --strip-all -v \
 "${instdir}"/opt/rustc-1.50.0/bin/*                              \
 "${instdir}"/opt/rustc-1.50.0/lib/cargo-credential-1password     \
 "${instdir}"/opt/rustc-1.50.0/lib/rustlib/x86_64-apathy-linux-musl/bin/*

find "${instdir}"/opt/rustc-1.50.0/lib -name \*.so   \
 -exec strip --strip-unneeded -v {} ';'
find "${instdir}"/opt/rustc-1.50.0/lib -name \*.rlib \
 -exec strip --strip-debug    -v {} ';'
