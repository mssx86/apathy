# 5
/bin/busybox time samu -j3

# 6
instdir="$PWD/KEK"
DESTDIR="${instdir}" samu install

rm -rfv \
 "${instdir}"/opt/llvm-11.0.0/share/man \
 "${instdir}"/opt/llvm-11.0.0/share/clang/bash-autocomplete.sh

find "${instdir}"/opt/llvm-11.0.0/bin \
 -type f              -exec strip --strip-all      -v {} ';'

find "${instdir}"/opt/llvm-11.0.0/lib \
 -type f -name \*.a   -exec strip --strip-debug    -v {} ';'

find "${instdir}"/opt/llvm-11.0.0/lib \
 -type f -name \*.so* -exec strip --strip-unneeded -v {} ';'

# 7
doas -- cp -r  "${instdir}"/opt/llvm-11.0.0 /opt/
doas -- chown -R root:root /opt/llvm-11.0.0
