# 1
export        CC="/opt/llvm-11.0.0/bin/clang"
export       CXX="/opt/llvm-11.0.0/bin/clang++"
export        LD="/opt/llvm-11.0.0/bin/ld.lld"
export        AR="/opt/llvm-11.0.0/bin/llvm-ar"
export        AS="/opt/llvm-11.0.0/bin/llvm-as"
export        NM="/opt/llvm-11.0.0/bin/llvm-nm"
export     STRIP="/opt/llvm-11.0.0/bin/llvm-strip"
export    RANLIB="/opt/llvm-11.0.0/bin/llvm-ranlib"
export   OBJCOPY="/opt/llvm-11.0.0/bin/llvm-objcopy"
export   OBJDUMP="/opt/llvm-11.0.0/bin/llvm-objdump"
export   OBJSIZE="/opt/llvm-11.0.0/bin/llvm-size"
export   READELF="/opt/llvm-11.0.0/bin/llvm-readelf"
export ADDR2LINE="/opt/llvm-11.0.0/bin/llvm-addr2line"

          CFLAGS="-w -Ofast -mtune=native -march=native -fstack-protector-strong -fuse-ld=lld -mllvm -polly -flto=thin -flto-jobs=1"
export    CFLAGS="${CFLAGS} -stdlib=libc++ -rtlib=compiler-rt -unwindlib=libunwind"
export  CXXFLAGS="${CFLAGS} -fpermissive"
export   LDFLAGS="${CFLAGS} -Wl,--as-needed -Wl,--gc-sections -Wl,-O3 -Wl,--lto-O3 -Wl,--icf=all -Wl,--thinlto-jobs=1 -Wl,-z,stack-size=2097152"

# 2
tar xf /mss/work/sauces/llvm-project-llvmorg-11.0.0-rc3.tar.gz
cd     llvm-project-llvmorg-11.0.0-rc3

sed -i 's/!defined(_GCC_MAX_ALIGN_T)/& \&\& !defined(__DEFINED_max_align_t)/' libcxx/include/stddef.h
sed -i 's/set(COMPILER_RT_HAS_SANITIZER_COMMON TRUE)/set(COMPILER_RT_HAS_SANITIZER_COMMON FALSE)/' compiler-rt/cmake/config-ix.cmake

pdir="/mss/repo/pkg-management/patches/llvm-11.0.0"
patch -p1 < "${pdir}"/libcxx-musl_compat.patch

# 3
mkdir -v build
cd       build

# 4
