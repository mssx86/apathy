# 8 > openscenegraph
tar xf /mss/work/sauces/openmw-osg-3.4-8b07809f.tar.zst
cd     openmw-osg-3.4-8b07809f/

patch -p1 < "${pdir}"/0003-openscenegraph-cmake.patch
