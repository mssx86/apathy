# 1
find . -type f -name meson.build -exec \
 sed -i "/subdir('tests')/d;/subdir('fuzzing')/d" {} +

mkdir build
cd    build

meson --buildtype=plain \
 --prefix=/usr           \
 -Dfam=false             \
 -Dgtk_doc=false         \
 -Dinstalled_tests=false \
 -Dinternal_pcre=false   \
 -Dlibmount=enabled      \
 -Dman=false             \
 -Dnls=disabled          \
 -Dtests=false           \
 -Dxattr=false           \
..

samu

# 2
doas -s
samu install
rm -rf \
 /usr/share/gdb     \
 /usr/share/gettext \
 /usr/share/bash-completion
