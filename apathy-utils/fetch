#!/mss/bin/sh
printf "  _______ _______ _______
 |   |   |     __|     __|
 |       |__     |__     |
 |__|_|__|_______|_______|\n"

dist=$(awk 'gsub("DISTRIB_ID=", ""),gsub("\"", "")' /etc/lsb-release)
cpu=$(awk '/model name/ {print $5,$7}' /proc/cpuinfo | tail -1)
freq=$(awk '/MHz/ {print int($4)"mhz"}' /proc/cpuinfo | tail -1)
kern=$(uname -r)
upt=$(uptime --pretty | sed 's/up //;s/\ days\?,/d/;s/\ hours\?,\?/h/;s/\ minutes\?/m/')
mem=$(free | awk 'NR==2 {print int($3/1014)"/"int($2/1024)"mib"}')

printf "\n * dist\t: ${dist}\n * kern\t: ${kern}\n * sh\t: $SHELL\n * upt\t: ${upt}\n * cpu\t: ${cpu} @ ${freq}\n * mem\t: ${mem}\n\n"
