#!/mss/bin/sh
. /mss/bin/apathy-funcs
rootcheck

cd /var/log

for log in *; do
  if [ -f "${log}" ]
   then
    aprint_ret "cleaning ${cl_grn}${log}${c_res}." 
    printf '' > "${log}"
    evalret
   else
    aprint_fail "${cl_grn}${log}${c_res} is a directory."
  fi
 done

aprint_ret "cleaning ${cl_grn}/var/lib/mpd/log${c_res}."
printf '' > /var/lib/mpd/log
evalret
