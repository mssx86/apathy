#!/mss/bin/sh
. /mss/initbits/bin/apathy-init-funcs

case "$1" in
 stop)
  ainitmes "sending ${c_lcyan}TERM${c_reset} to all processes."
   killall5 -s TERM
  evalret

  sleep 3

  ainitmes "sending ${c_lcyan}KILL${c_reset} to remaining processes."
   killall5 -s KILL
  evalret
 ;;
*)
  ainitusage "{stop}"
  exit 1
 ;;
esac
