#!/mss/bin/sh
sel=$(printf "apathy-browser\nkill-dwm\nreboot\npoweroff" \
      | dmenu -b -p "meh:")

killdwm(){
 kill -TERM \
  -"$(ps -o pgid $(pidof dwm)     \
      | awk 'NR==2 {gsub(" ",""); \
      print}')"
}

case "$sel" in
 poweroff)       killdwm && doas -- kill -USR1 1 ;;
 reboot)         killdwm && doas -- kill -INT 1  ;;
 kill-dwm)       killdwm        ;;
 apathy-browser) apathy-browser ;;
esac
