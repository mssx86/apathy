#!/mss/bin/sh
sel=$(printf "apathy-browser\nkill-i3\nkill-cwm\nreboot\npoweroff" | dmenu -b -p "meh:")

case "$sel" in
 poweroff)
  kill -KILL $(pidof apathy-browser)
  doas -- init 0
 ;;
 reboot)
  kill -KILL $(pidof apathy-browser)
  doas -- init 6
 ;;
 kill-cwm)
  kill -KILL $(pidof apathy-browser)
  kill -KILL -$(cat /tmp/lemonbar.pid)
  kill -TERM $(pidof cwm)
 ;;
 kill-i3)
  kill -KILL $(pidof apathy-browser)
  i3-msg exit &
 ;;
 apathy-browser)
  apathy-browser
 ;;
esac
