#!/mss/bin/sh
sel=$(printf "apathy-browser\nkill-dwm\nreboot\npoweroff" | dmenu -b -p "meh:")

case "$sel" in
 poweroff)
  kill -KILL $(pidof apathy-browser)
  doas -- init 0
 ;;
 reboot)
  kill -KILL $(pidof apathy-browser)
  doas -- init 6
 ;;
 kill-dwm)
  kill -KILL $(pidof apathy-browser)
  kill -TERM -$(ps -o pgid $(pidof dwm) | awk 'NR==2 {gsub(" ",""); print}')
 ;;
 apathy-browser)
  apathy-browser
 ;;
esac
