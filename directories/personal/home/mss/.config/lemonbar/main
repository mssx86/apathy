#!/mss/bin/sh
kek="simple"
geom="816x12+550+0"
c_bg="000000"
c_fg="ffffff"

if [ -z "$(pidof lemonbar)" ]
 then
  ps -o pgid -p "$$" | tail -1 | sed 's/ //g' > /tmp/lemonbar.pid

  script -q -c "xprop -spy -root | awk '/CURRENT_DESKTOP\(/ {print \$3}'" \
   | lemonbar -p -b -d  -g "6x12+0+0"              \
   -f "scientifica-7:antialias=true:autohint=true" \
   -f "euphon-10"                                  \
   -B "#000000" &

  /home/mss/.config/lemonbar/"${kek}"              \
   | lemonbar -p -b -d -a 20                       \
   -g "${geom}"                                    \
   -f "scientifica-7:antialias=true:autohint=true" \
   -f "euphon-10"                                  \
   -B "#${c_bg}" -F "#${c_fg}"                     \
   | sh
 else
  kill -KILL -$(cat /tmp/lemonbar.pid)
fi
