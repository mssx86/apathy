umask 022
unset ROOTPATH

. /mss/bin/sourceme         || source /mss/bin/sourceme
. /mss/bin/sourceme-aliases || source /mss/bin/sourceme-aliases
. /mss/bin/sourceme-build   || source /mss/bin/sourceme-build

## a >> ash/bash settings
# a1 >> prompts
[ $(id -u) -eq 0 ] \
 && _user="\[\e[34m\] \#\[\e[m\] " \
 || _user="\[\e[37m\]$\[\e[m\] "
export PS1="${_user}\[\e[34m\]\W\[\e[m\] "
export PS2="\[\e[33m\] -> \[\e[m\] "

# a2 >> history
export HISTSIZE=1000
