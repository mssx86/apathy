#[sda5][ext4][apathy-mlfs]
/dev/sda5	/		ext4		defaults					1	1

#[sda6][ext4][apathy-glibc]
/dev/sda6	/mnt/mss/apathy	ext4		rw,relatime,data=ordered			0	3

#[sda7][swap][apathy swap]
/dev/sda7	swap		swap		pri=100						0	0

#[sda2][ext4][stuff storage]
/dev/sda2	/mnt/mss/stuff	ext4		rw,relatime,data=ordered			0	2

## mount home
/mnt/mss/stuff/techy-bits/local-backup /home/mss auto defaults,nofail,nobootwait,bind           0       2

## virtfs+tmpfs
proc		/proc		proc		nosuid,noexec,nodev				0	0
sysfs		/sys		sysfs		nosuid,noexec,nodev				0	0
devpts		/dev/pts	devpts		gid=5,mode=620					0	0
tmpfs		/run		tmpfs		defaults					0	0
devtmpfs	/dev		devtmpfs	mode=0755,nosuid				0	0
tmpfs		/mnt/mss/ram	tmpfs		nodev,nosuid,size=5120M				0	0
