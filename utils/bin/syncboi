#!/mss/bin/sh
rsync \
\
 --links          \
 --copy-dirlinks  \
 --hard-links     \
 --perms          \
 --executability  \
 --owner          \
 --group          \
 --times          \
 --devices        \
 --specials       \
\
 --fake-super     \
 --recursive      \
\
 --human-readable \
 --progress       \
\
 "${@}"
