export     CHOST="x86_64-apathy-linux-musl"
export    CBUILD="${CHOST}"
export MAKEFLAGS="-j2"

export        CC="${CHOST}-gcc"
export       CXX="${CHOST}-g++"

export    CFLAGS="-w -O3 -mtune=native -march=native -fstack-protector-strong"
export   LDFLAGS="${CFLAGS}"
export  CXXFLAGS="${CFLAGS} -Wl,--as-needed -Wl,--gc-sections -Wl,-O3"
