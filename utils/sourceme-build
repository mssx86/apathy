export     CHOST="x86_64-apathy-linux-musl"
export    CBUILD="${CHOST}"
export MAKEFLAGS="-j5"

export       CC="${CHOST}-gcc"
export      CXX="${CHOST}-g++"

export   CFLAGS="-w -O3 -mtune=native -march=native -fstack-protector-strong -fno-common -fgraphite-identity -floop-nest-optimize -ftree-vectorize"
export CXXFLAGS="${CFLAGS}"
export  LDFLAGS="${CFLAGS} -Wl,--as-needed -Wl,--gc-sections -Wl,-O2"
